
@using Seminarski_fitness_centar_IB130116.Helper

@{
    ViewData["Title"] = "Lista dolazaka i odlazaka";
}

@{ User user = Context.GetLoggedUser(); }
@model Seminarski_fitness_centar_IB130116.ViewModels.DolasciOdlasciVM

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br/>
    @Html.ActionLink("PRIJAVI NOVI DOLAZAK SADA", "SnimiDolazak", "DolasciOdlasci", htmlAttributes: new Dictionary<string, object> { { "class", "btn btn-danger" } });
    <hr/>
    <div class="jumbotron">
        <ul>
            @if (Model.Rows.Count > 0)
            {
                @foreach (var dolazak_odlazak in Model.Rows)
                 {
                     string dodatni_tekst;
                     
                     if (dolazak_odlazak.VrijemeOdlaska.ToString() == "1/1/0001 12:00:00 AM")
                     {
                         <li>Vrijeme dolaska: @dolazak_odlazak.VrijemeDolaska | @Html.ActionLink("PRIJAVI ODLAZAK!", "SnimiOdlazak", "DolasciOdlasci", routeValues: new {DolazakOdlazakId = dolazak_odlazak.DolazakOdlazakId}, htmlAttributes: null) </li>
                     }
                     else
                     {
                         <li>Vrijeme dolaska: @dolazak_odlazak.VrijemeDolaska | Vrijeme odlaska: @dolazak_odlazak.VrijemeOdlaska </li>
                     }
                 }
            }
            else
            {
                <span>Nema prijavljenih dolazaka/odlazaka!</span>
            }
        </ul>

    </div>
</div>